{% set netadmin = 'engine_network:'~salt['pillar.get']('core:admin_network') %}
#
# DHCP Server Configuration file.
#   see /usr/share/doc/dhcp*/dhcpd.conf.example
#   see dhcpd.conf(5) man page
#

 authoritative;

 subnet {{ salt['pillar.get'](netadmin~':subnet') }} netmask {{ salt['pillar.get'](netadmin~':netmask') }} {
 range {{ salt['pillar.get'](netadmin~':dhcp_unknown_range') }};
 option domain-name "{{ salt['pillar.get']('core:domain_name') }}";
 option domain-name-servers {% for server_ip in salt['pillar.get']('engine_connect:dns_server_ip') %}{% if loop.first %}{{ server_ip }}{% else %},{{ server_ip }}{% endif %}{% endfor %};
# option routers {{ salt['pillar.get']('engine:master:masterip') }}; # to be corrected
# option broadcast-address {{ salt['pillar.get']('engine:network:broadcast_address') }};

 default-lease-time 600;
 max-lease-time 7200;

 next-server {% for server_ip in salt['pillar.get']('engine_connect:pxe_server_ip') %}{% if loop.first %}{{ server_ip }}{% else %},{{ server_ip }}{% endif %}{% endfor %};
 filename "pxelinux.0";

{% for type in salt['pillar.get']('core:types') %}
#############################################
########## {{type}}
###
{% for group, group_args in salt['pillar.get'](type, {}).items() %}
##########
# {{group}}

   {%- for host, host_args in group_args.items() %}
      {%- for network, network_args in host_args.network.items() %}
         {%- if network == salt['pillar.get']('core:admin_network') %}
 host {{ host }} {
 hardware ethernet {{ network_args.hwaddr }};
 fixed-address {{ network_args.ip }};
 }
         {%- endif %}
      {%- endfor %}
    {%- if host_args.bmc is defined %}
   host {{ host_args.bmc.name }} {
   hardware ethernet {{ host_args.bmc.hwaddr }};
   fixed-address {{ host_args.bmc.ip }};
   }
    {%- endif %}
  {%- endfor %}
{% endfor %}
{% endfor %}


 }

